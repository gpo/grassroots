  "type": "module",
  "exports": {
    "./*": {
      "require": "./src/**/*.ts",
      "import": "./src/**/*.ts",
      "types": "./src/**/*.ts"
    }
  },
  "scripts": {
    "build": "nest build",
    "bootstrap-metadata": "echo 'export default async () => {return {}};' > src/FormattedMetadata.gen.ts",
    "tsc": "tsc -p tsconfig.buildwithtypes.json",
    "start": "nest start --watch",
    "start:prod": "node dist/Main",
    "gen-files-only": "nest start -- --gen-files-only",
    "gen-files-only-watch": "chokidar ../grassroots-shared/dist/metadata.js -c \"nest start -- --gen-files-only\"",
    "debug": "pnpm run build && node --inspect dist/Main",
    "test:tstyche": "pnpm exec tstyche",
    "test": "vitest run",
    "test-watch": "vitest watch",
    "clean": "rm -rf .turbo && rm -rf dist && rm -f *.tsbuildinfo && rm -rf /app/.turbo && rm -f src/metadata.ts src/FormattedMetadata.gen.ts /tmp/lastmetadata.ts"
  },
  "dependencies": {

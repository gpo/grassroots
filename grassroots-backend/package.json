    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "grassroots-shared": "workspace:*",
    "nestjs-spelunker": "^1.3.2",
    "openapi-fetch": "^0.13.8",
    "passport": "^0.7.0",
    "passport-google-oidc": "^0.1.0",
    "passport-local": "^1.0.0",
    "pg": "^8.15.5",
    "prettier": "^3.6.2",

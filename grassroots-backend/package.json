{
  "name": "grassroots-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start --watch",
    "start:prod": "node dist/Main",
    "gen-files-only": "nest start -- --gen-files-only",
    "debug": "pnpm run build && node --inspect dist/Main",
    "test": "vitest watch",
    "test:ci": "vitest run",
    "test:tstyche": "pnpm exec tstyche",
    "db-create": "tsc -p tsconfig.mikroorm.json && pnpm exec mikro-orm migration:create --config dist/mikro-orm.config.js",
    "db-up": "tsc -p tsconfig.mikroorm.json && pnpm exec mikro-orm migration:up --config dist/mikro-orm.config.js",
    "db-fresh": "tsc -p tsconfig.mikroorm.json && pnpm exec mikro-orm migration:fresh --config dist/mikro-orm.config.js"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.4.15",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.4.15",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@types/pg": "^8.15.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "connect-pg-simple": "^10.0.0",
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "generate-metadata": "workspace:*",
    "grassroots-shared": "workspace:*",
    "grassroots-shared-net": "workspace:*",
    "nestjs-spelunker": "^1.3.2",
    "openapi-fetch": "^0.13.8",
    "openapi-paths": "workspace:*",
    "passport": "^0.7.0",
    "passport-google-oidc": "^0.1.0",
    "passport-local": "^1.0.0",
    "pg": "^8.15.5",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tstyche": "^3.5.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.15",
    "@mikro-orm/migrations": "^6.4.15",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.13.5",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/node": "^24.3.0",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/passport-openidconnect": "^0.1.3",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.2.0",
    "globals": "^16.0.0",
    "openapi-typescript": "^7.6.1",
    "safe-stable-stringify": "^2.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "unplugin-swc": "^1.5.4",
    "vitest": "^3.2.0"
  },
  "mikro-orm": {
    "alwaysAllowTs": true,
    "useTsNode": false,
    "configPaths": [
      "./path/to/your/mikro-orm.config.ts"
    ]

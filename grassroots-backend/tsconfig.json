  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@shared/CASLSubjects": [
        "./src/grassroots-shared/CASLSubjects/CASLSubjects.backend.ts"
      ]
    }
  },
  "exclude": ["src/testing/typetests/**"]
}

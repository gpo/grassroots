{
  "$schema": "https://turborepo.com/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "generate-metadata#gen-metadata"
      ],
      "outputs": [
        "dist/**/*.js",
        "dist/**/*.js.map"
      ]
    },
    "gen-files-only": {
      "dependsOn": [
        "^build",
        "^tsc"
      ],
      "outputs": [
        "src/metadata.ts",
        "./openAPI.json",
        "../openapi-paths/src/OpenAPI.gen.ts"
      ]
    }
  }
}

{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "bootstrap-metadata": {
      "outputs": ["src/FormattedMetadata.gen.ts"],
      "cache": true
    },
    "gen-files-only": {
      "dependsOn": ["^build", "bootstrap-metadata"],
      "outputs": [
        "src/metadata.ts",
        "./openAPI.json",
        "../openapi-paths/src/OpenAPI.gen.ts",
        "src/FormattedMetadata.gen.ts"
      ]
    },
    "build": {
      "dependsOn": ["^build", "gen-files-only"],
      "outputs": ["dist/**/*.js", "dist/**/*.js.map"]
    }
  }
}

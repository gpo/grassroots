FROM node:20

WORKDIR /app

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy remaining source code
COPY . .

# Install dependencies (skip postinstall at root level)
RUN npm install
RUN cd grassroots-backend
RUN npm install
RUN npm run postinstall

# Build the backend
WORKDIR /app/grassroots-backend
RUN npm run build

EXPOSE 3000

CMD ["npm", "run", "start:prod"]